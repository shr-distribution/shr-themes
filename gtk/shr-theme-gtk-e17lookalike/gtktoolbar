style "toolbar"
{
  xthickness = 0
  ythickness = 0
  engine "pixmap"
  {
    image
    {
      function      = BOX
      file          = "toolbar/toolbar.png"
      stretch       = TRUE
    }
  }
}
widget_class "*Toolbar" style "toolbar"

style "gtktoolbar-label" {
    fg[NORMAL]  = "#ffffff"
    fg[INSENSITIVE] = "#888888"
    fg[ACTIVE] = "#ffffff"
    text[NORMAL] = "#ffffff"
    text[ACTIVE] = "#ffffff"
    text[INSENSITIVE] = "#ffffff"
}
widget_class "*Toolbar.*" style "gtktoolbar-label"
