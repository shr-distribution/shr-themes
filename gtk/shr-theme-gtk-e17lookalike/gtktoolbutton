{
  xthickness = 4
  ythickness = 4
  engine "pixmap" 
  {
    image
    {
      function    = BOX
      state       = ACTIVE
      file        = "toolbar/toolbutton-active.png"
      border      = {0, 0, 0, 0}
      stretch     = TRUE
    }
    image
    {
      function    = BOX
      state       = PRELIGHT
      file        = "toolbar/toolbar.png"
      border      = {0, 0, 0, 0}
      stretch     = TRUE
    }
  }
}
